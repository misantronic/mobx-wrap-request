{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "allowJs": false,
        "jsx": "react",
        "sourceMap": true,
        "rootDir": "./src",
        "noEmit": false,
        "outDir": "./dist",
        "importHelpers": false,
        "downlevelIteration": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "baseUrl": ".",
        "declaration": true
    },
    "include": ["./src"],
    "exclude": ["node_modules"]
}
